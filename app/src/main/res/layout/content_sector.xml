<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_grey_two"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/empty_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/empty_data_tips"
        android:textColor="@color/black60"
        android:textSize="18sp"
        android:visibility="gone"/>

    <com.hfut.zhaojiabao.myrecord.chart.SectorChart
        android:id="@+id/sector_chart"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/type_indicator"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignStart="@id/sector_chart"
        android:layout_below="@id/sector_chart"
        android:layout_marginTop="30dp"
        android:overScrollMode="never"/>

</RelativeLayout>
