<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hfut.zhaojiabao.myrecord">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".JayApp"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".JayActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CalculatorActivity"
            android:label="@string/title_activity_calculator"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ManagerCategoryActivity"
            android:label="@string/title_activity_manager_category"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".RecordChartActivity"
            android:label="@string/title_activity_record_chart"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SectorActivity"
            android:label="@string/title_activity_sector"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".RecoveryActivity"
            android:label="@string/title_activity_recovery"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".BackupActivity"
            android:label="@string/title_activity_backup"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>